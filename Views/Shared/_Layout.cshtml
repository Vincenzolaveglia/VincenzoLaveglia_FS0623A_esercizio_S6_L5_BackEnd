<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Platinum Palace Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #E6F7FF">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark text-light" style="height: 3em">
        <div class="container">
            <div class="mx-5 collapse navbar-collapse d-sm-inline-flex d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-center align-items-center">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand"><img src="~/Content/imgs/logo.jpeg" style="width:40px" class="rounded-pill"/></a>
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Gestione Camere", "ListaCamera", "Camera", new { area = "" }, new { @class = "nav-link mx-3" })
                            @Html.ActionLink("Gestione Clienti", "ListaCliente", "Cliente", new { area = "" }, new { @class = "nav-link mx-3" })
                            @Html.ActionLink("Gestione Prenotazioni", "ListaPrenotazione", "Prenotazione", new { area = "" }, new { @class = "nav-link mx-3" })
                        }
                    </div>
                </div>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul style="list-style: none" class="m-0 p-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Benvenuto @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu bg-dark">
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "dropdown-item text-light" })</li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link mx-3" });
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Gestione Albergo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
